{
  "name": "codebase-analyzer",
  "version": "0.1.0",
  "description": "AI-powered codebase analysis tool with structured workflows",
  "type": "module",
  "bin": {
    "code-analyzer": "./bin/code-analyzer.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "link": "npm link",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:backend": "eslint backend/ bin/",
    "lint:frontend": "eslint frontend/",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "codebase",
    "analysis",
    "ai",
    "code-review",
    "code-quality",
    "static-analysis"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unused-imports": "^4.4.1",
    "globals": "^15.14.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "get-port": "^7.1.0"
  }
}
